extends layout/main-layout.pug
block Main
        <div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
            <div class="max-w-md w-full space-y-8">
                <div>
                    //<img class="mx-auto h-12 w-auto" src="images/logo-600.svg" alt="Workflow">
                    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Registro de usuario</h2>
                </div>
                <form class="mt-8 space-y-6" action="registro" method="POST">
                    <input type="hidden" name="remember" value="true">
                    <div class="flex flex-col rounded-md shadow-sm -space-y-px gap-6">
                        div(class="flex flex-col")
                            h3(class="font-bold underline") Datos de inicio de sesion
                            div(class="border-b-2  border-l-gray-800 border-opacity-50")
                                label(for="username" class="text-xs") Username
                                input( type="text", name="username" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm")
                                label(for="password" class="text-xs") Password
                                input(type="password", name="password" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm")
                                label(for="confirmacion" class="text-xs") Password Confirmation
                                input(type="password", name="password_conf" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm")
                        div(class="flex flex-col")
                            h3(class="font-bold underline m") Datos Personales
                            div(class="border-b-2  border-l-gray-800 border-opacity-50")
                                label(for="nombre" class="text-xs") Nombre
                                input(type="text", name="nombre" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm")
                                label(for="apellido" class="text-xs") Apellido
                                input(type="text", name="apellido" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm")
                                label(for="fecha de nacimiento" class="text-xs") Fecha Nacimiento 
                                input(type="date", name="birthday" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm")
                                label(for="email" class="text-xs") Email
                                input(type="email", name="email" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm")
                    </div>
                    <div>
                        <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                                <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                                </svg>  
                            </span> 
                            Sign Registrarse     
                        </button>
                    </div>
                </form>
                div.register_message
                    p.message_reg #{error}
            </div>
        </div>