                        div.log_container
                            a(class = "menu_item7" href="") #{logStatus}
                    div.cart_container
                        div.cart_img
                            img(src="", alt="contenedor")
                            p #{numItem}
            
        main 
            div.register_container
                form(class= "data_container" action="/usuario/registro" method="POST")
                    div.register_top
                        h3 Datos de inicio de sesion
                        div.inicio_sesion
                            label(for="username") Username
                            input(type="text", name="username")
                            label(for="password") Password
                            input(type="password", name="password")
                            label(for="confirmacion") Password Confirmation
                            input(type="password", name="password_conf")
                    div.register_bottom
                        h3 Datos Personales
                        div.datos_personales
                            label(for="nombre") Nombre
                            input(type="text", name="nombre")
                            label(for="apellido") Apellido
                            input(type="text", name="apellido")
                            label(for="fecha de nacimiento") Fecha Nacimiento 
                            input(type="date", name="birthday")
                            label(for="email") Email
                            input(type="email", name="email")
                    input(type="submit", name="boton" value="Regitrarse")
                div.register_message
                    p.message_reg #{error}

        footer.footer_section
            div.footer_container
                div.footer_links
                    div.text_container
                       h3 About 
                       a(class="footer_text" href="#") Informacion de Aplicacion 
