doctype html
html(lang="en")
    head
        
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title = #{title}
    body
        header
            div.navbar_container
                div.logo_container
                    img(class = "logo" src = "", alt = "Logo")
                div.navbar
                    div.menu_bar
                        nav.nav_container 
                            div.menu_items
